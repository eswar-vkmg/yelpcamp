<%- include('partials/header') -%>
<h1 style="text-align: center;" class="mt-5">Register</h1>

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-lg-4">
            <div>
                <form action="/register" method="POST">
                    <div class="form-group"><input input class="form-control" type="text" name="username" placeholder="username"></div>
                    <div class="form-group"><input input class="form-control" type="password" name="password" placeholder="password"></div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>