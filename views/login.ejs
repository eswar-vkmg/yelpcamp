<%- include('partials/header') -%>

<h1 style="text-align: center;" class="mt-5">Login</h1>

<div class="container text-center">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-lg-4">
        <form action="/login" method="POST">
            <div class="form-group"><input input class="form-control" type="text" name="username" placeholder="username"></div>
            <div class="form-group"><input input class="form-control" type="password" name="password" placeholder="password"></div>
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
            <div class="mt-3"><a href="/register">Don't have an account?</a></div>
        </form>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>