<%- include('../partials/header')-%>

<div class="container text-center">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-lg-4">
            <h1>Edit <%= camp.name %></h1>
            <div class="mt-4">
                <form method="POST" action="/campgrounds/<%=camp._id%>?_method=PUT">
                    <div class="form-group"><input class="form-control" type="text" name="camp[name]" placeholder="name"
                            value="<%=camp.name%>"></div>
                    <div class="form-group"><input class="form-control" type="text" name="camp[image]" placeholder="image url"
                            value="<%=camp.image%>"></div>
                    <div class="form-group"><input class="form-control" type="text" name="camp[description]" placeholder="description"
                            value="<%=camp.description%>"></div>
                    <input class="btn btn-primary btn-block" type="submit" value="Submit"></button>
                </form>
            </div>    
            <div class="mt-4"><a href="/campgrounds"> Show all campgrounds </a></div>
        </div>
    </div>
</div>

<%- include('../partials/footer')-%>